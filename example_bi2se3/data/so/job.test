module unload openmpi/2.1.0/intel-15
module load intel/2015 
module load openmpi/1.10.2/intel-15

cp INCAR.scf INCAR

mpirun /home/kfg/codes/vasp_ncl

cp OSZICAR OSZICAR.scf
